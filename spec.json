{
  "openapi": "3.0.2",
  "info": {
    "title": "Dependency Checker",
    "version": "0.20.0"
  },
  "servers": [
    {
      "url": "https://dependency-checker.test/api",
      "description": "local test server"
    }
  ],
  "paths": {
    "/plugin": {
      "get": {
        "summary": "Lists all available plugins.",
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Plugin"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/repository": {
      "get": {
        "summary": "Returns a list of all repositories.",
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Repository"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Creates a new repository.",
        "description": "If a repository with the given url already exists, a reference to it is returned.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "url": {
                    "type": "string",
                    "example": "https://github.com/unwanted-consulting/DevelopmentBestPractices"
                  }
                },
                "required": [
                  "url"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Repository already existed.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Repository"
                }
              }
            },
            "links": {
              "GetRepository": {
                "operationId": "getRepository",
                "parameters": {
                  "repositoryId": "$response.body#/id"
                }
              }
            }
          },
          "201": {
            "description": "Repository was created.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Repository"
                }
              }
            },
            "links": {
              "GetRepository": {
                "operationId": "getRepository",
                "parameters": {
                  "repositoryId": "$response.body#/id"
                }
              }
            }
          }
        }
      }
    },
    "/repository/{repositoryId}": {
      "get": {
        "summary": "Returns a specific Repository.",
        "operationId": "getRepository",
        "parameters": [
          {
            "name": "repositoryId",
            "in": "path",
            "schema": {
              "type": "string",
              "format": "uuidv4",
              "example": "8f6e2a24-028e-45ad-a14c-6e80356168b5"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Repository exists and was returned.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Repository"
                }
              }
            }
          },
          "404": {
            "description": "Repository doesn't exist."
          }
        }
      },
      "delete": {
        "summary": "Deletes the repository",
        "operationId": "deleteRepository",
        "parameters": [
          {
            "name": "repositoryId",
            "in": "path",
            "schema": {
              "type": "string",
              "format": "uuidv4",
              "example": "8f6e2a24-028e-45ad-a14c-6e80356168b5"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Repository existed and was deleted or did not exist in the first place."
          }
        }
      }
    },
    "/repository/{repositoryId}/plugin": {
      "get": {
        "summary": "Lists the enabled Plugins for a Repository.",
        "operationId": "getPluginsForRepository",
        "parameters": [
          {
            "name": "repositoryId",
            "in": "path",
            "schema": {
              "type": "string",
              "format": "uuidv4",
              "example": "8f6e2a24-028e-45ad-a14c-6e80356168b5"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Repository exists and list of Plugins is returned.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Plugin"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Repository doesn't exist."
          }
        }
      },
      "post": {
        "summary": "Enables a Plugin for a Repository.",
        "operationId": "enablePluginForRepository",
        "parameters": [
          {
            "name": "repositoryId",
            "in": "path",
            "schema": {
              "type": "string",
              "format": "uuidv4",
              "example": "8f6e2a24-028e-45ad-a14c-6e80356168b5"
            },
            "required": true
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "pluginId": {
                    "type": "string",
                    "format": "uuid",
                    "example": "8f6e2a24-028e-45ad-a14c-6e80356168b5"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "The Plugin is now (and possibly was already) enabled for the Repository. Returns the full list of enabled Plugins for the Repository.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Plugin"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Plugin doesn't exist."
          },
          "404": {
            "description": "Repository doesn't exist."
          }
        }
      }
    },
    "/repository/{repositoryId}/plugin/{pluginId}": {
      "delete": {
        "summary": "Disables a Plugin for a Repository.",
        "parameters": [
          {
            "name": "repositoryId",
            "in": "path",
            "schema": {
              "type": "string",
              "format": "uuidv4",
              "example": "8f6e2a24-028e-45ad-a14c-6e80356168b5"
            },
            "required": true
          },
          {
            "name": "pluginId",
            "in": "path",
            "schema": {
              "type": "string",
              "format": "uuidv4",
              "example": "8f6e2a24-028e-45ad-a14c-6e80356168b5"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "The Plugin is now (and possibly was already) disabled for the Repository."
          },
          "404": {
            "description": "The Repository doesn't exist."
          }
        }
      }
    },
    "/repository/{repositoryId}/manifest": {
      "get": {
        "summary": "Lists all manifests found in the Repository on the latest check.",
        "parameters": [
          {
            "name": "repositoryId",
            "in": "path",
            "schema": {
              "type": "string",
              "format": "uuidv4",
              "example": "8f6e2a24-028e-45ad-a14c-6e80356168b5"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "A list of all manifests currently in the repository.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Manifest"
                  }
                }
              }
            }
          },
          "404": {
            "description": "The Repository doesn't exist."
          }
        }
      }
    },
    "/manifest": {
      "get": {
        "summary": "Lists all accessible manifests in the system.",
        "responses": {
          "200": {
            "description": "A list of all accessible manifests in the system.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Manifest"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/manifest/{manifestId}": {
      "get": {
        "summary": "A manifest.",
        "parameters": [
          {
            "name": "manifestId",
            "in": "path",
            "schema": {
              "type": "string",
              "format": "uuidv4",
              "example": "8f6e2a24-028e-45ad-a14c-6e80356168b5"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "A manifest.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Manifest"
                }
              }
            }
          },
          "404": {
            "description": "The Manifest doesn't exist."
          }
        }
      }
    },
    "/manifest/{manifestId}/report": {
      "get": {
        "summary": "A list of reports for a manifest.",
        "parameters": [
          {
            "name": "manifestId",
            "in": "path",
            "schema": {
              "type": "string",
              "format": "uuidv4",
              "example": "8f6e2a24-028e-45ad-a14c-6e80356168b5"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "A list of reports.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Manifest"
                  }
                }
              }
            }
          },
          "404": {
            "description": "The Manifest doesn't exist."
          }
        }
      }
    },
    "/manifest/{manifestId}/report/latest": {
      "get": {
        "summary": "The latest report for a manifest. Changes regularly.",
        "parameters": [
          {
            "name": "manifestId",
            "in": "path",
            "schema": {
              "type": "string",
              "format": "uuidv4",
              "example": "8f6e2a24-028e-45ad-a14c-6e80356168b5"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "A ManifestReport.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ManifestReport"
                }
              }
            }
          },
          "404": {
            "description": "The Manifest doesn't exist or has no report yet."
          }
        }
      }
    },
    "/repository/{repositoryId}/report/latest": {
      "get": {
        "summary": "The latest RepositoryReport for the Repository.",
        "parameters": [
          {
            "name": "repositoryId",
            "in": "path",
            "schema": {
              "type": "string",
              "format": "uuidv4",
              "example": "8f6e2a24-028e-45ad-a14c-6e80356168b5"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "A report.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RepositoryReport"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Repository": {
        "properties": {
          "id": {
            "type": "string",
            "format": "uuidv4",
            "example": "8f6e2a24-028e-45ad-a14c-6e80356168b5"
          },
          "url": {
            "type": "string",
            "example": "https://github.com/unwanted-consulting/DevelopmentBestPractices"
          },
          "activePlugins": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Plugin"
            }
          }
        },
        "required": [
          "id",
          "url",
          "activePlugins"
        ]
      },
      "Plugin": {
        "properties": {
          "id": {
            "type": "string",
            "format": "uuidv4",
            "example": "8f6e2a24-028e-45ad-a14c-6e80356168b5"
          },
          "language": {
            "type": "string",
            "example": "JavaScript"
          },
          "packageManager": {
            "type": "string",
            "example": "npm"
          }
        },
        "required": [
          "id",
          "language",
          "packageManager"
        ]
      },
      "Manifest": {
        "properties": {
          "id": {
            "type": "string",
            "format": "uuidv4",
            "example": "8f6e2a24-028e-45ad-a14c-6e80356168b5"
          },
          "path": {
            "type": "string",
            "format": "path",
            "example": "/package.json"
          },
          "foundBy": {
            "$ref": "#/components/schemas/Plugin"
          },
          "latestReport": {
            "type": "string",
            "format": "url",
            "example": "https://dependency-checker.test/api/repository/1/manifest/2/report/latest"
          }
        },
        "required": [
          "id",
          "path",
          "foundBy",
          "latestReport"
        ]
      },
      "ManifestReport": {
        "properties": {
          "id": {
            "type": "string",
            "format": "uuidv4",
            "example": "8f6e2a24-028e-45ad-a14c-6e80356168b5"
          },
          "generatedOn": {
            "description": "When the report has been generated.",
            "type": "string",
            "format": "date-time",
            "example": "2017-07-21T17:32:28Z"
          },
          "packages": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "current": {
                  "$ref": "#/components/schemas/Package"
                },
                "semverUpdate": {
                  "$ref": "#/components/schemas/Package"
                },
                "fullUpdate": {
                  "$ref": "#/components/schemas/Package"
                }
              },
              "required": [
                "current"
              ]
            }
          }
        },
        "required": [
          "id",
          "generatedOn",
          "packages"
        ]
      },
      "RepositoryReport": {
        "properties": {
          "generatedOn": {
            "type": "string",
            "format": "date-time",
            "example": "2017-07-21T17:32:28Z"
          },
          "manifests": {
            "description": "The Manifests here will only contain their latest reports.",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Manifest"
            }
          }
        },
        "required": [
          "generatedOn",
          "manifest"
        ]
      },
      "Package": {
        "properties": {
          "name": {
            "type": "string",
            "example": "@babel/core"
          },
          "version": {
            "type": "string",
            "example": "^7.2.2",
            "description": "This string can have any format, since there are package managers supporting anything as version strings."
          },
          "origin": {
            "type": "string",
            "example": "",
            "description": "This directs to un-official repositories for packages and is left out for packages installed form the default repository for a Plugin."
          }
        },
        "required": [
          "name",
          "version"
        ]
      }
    }
  }
}
